<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_delicious"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/special_2017_search"
        />
    <!-- layout_toRightOf : 在某个控件的右边 -->
    <TextView
        android:id="@+id/tv_delicious_headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="手机卫士"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_toRightOf="@id/iv_delicious"
        android:layout_marginLeft="5dp"
        />
    <TextView
        android:id="@+id/tv_delicious_describe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="手机内存"
        android:textSize="16sp"
        android:textColor="#808080"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/iv_delicious"
        android:layout_below="@id/tv_delicious_headline"
        android:layout_marginLeft="5dp"
        />

</RelativeLayout>